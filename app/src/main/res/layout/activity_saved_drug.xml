<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/app_basic_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"

        android:id="@+id/search_expanded_box"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/search_box_text_left_margin"
            android:text="NAME"
            android:textSize="@dimen/search_text_size"
            android:textColor="@color/searchbox_text_color"
            android:textColorHint="@color/searchbox_hint_text_color"
            android:background="@null"

            android:transitionName="name_view"
            android:singleLine="true"
             />


        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_share_2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no"
            android:tint="@color/black"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/alt_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_more_alt"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no"
            android:tint="@color/black"
            android:visibility="visible"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:visibility="gone"
            android:id="@+id/read_csv_btn"
            android:text="csv 읽어오기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:id="@+id/db_copy_btn"
            android:text="Export DB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:id="@+id/check_count_btn"
            android:visibility="gone"
            android:text="Check contraindicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:id="@+id/extract_btn"
            android:text="extract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:id="@+id/pickup_img_btn"
            android:text="Pickup Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:indeterminateOnly="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View

            android:background="@color/bright_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <HorizontalScrollView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:layout_marginEnd="56dp"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_group"

                app:singleLine="true"

                app:chipSpacingHorizontal="@dimen/view_spacing"
                android:layout_width="wrap_content"


                android:animateLayoutChanges="true"

                android:layout_height="wrap_content">
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>



        <ImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/filter_btn"
            android:layout_alignParentEnd="true"
            android:layout_width="56dp"
            android:src="@drawable/ic_filter_list"
            android:layout_height="56dp"/>
    </RelativeLayout>
    <!--    <androidx.appcompat.widget.AppCompatEditText-->
    <!--       android:id="@+id/search_edittext"-->
    <!--       android:layout_width="match_parent"-->
    <!--       android:layout_height="wrap_content"/>-->
    <TextView
        android:visibility="gone"
        android:id="@+id/warning_msg"
        android:background="@drawable/rounded_fill_gray"
        android:textColor="@color/white"
        android:padding="@dimen/view_margin_spacing"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:layout_marginTop="38dp"
        android:text="[!] 저장된 정보가 없습니다.\n\n개별 알약 페이지에서 하트를 누르고 해당 리스트에  저장해보세요."
        android:layout_width="340dp"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_drug"
        android:layout_weight="1"
        android:background="@null" />


</LinearLayout>