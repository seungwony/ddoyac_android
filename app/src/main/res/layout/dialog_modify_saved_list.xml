<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:hintEnabled="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/view_spacing"
        app:counterEnabled="true"
        app:counterMaxLength="10"


        app:boxBackgroundColor="@color/white"
        android:hint="이름을 입력해주세요."
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"




            android:id="@+id/name_tf"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <RelativeLayout
        android:id="@+id/remove_btn"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/view_margin_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="@string/delete_saved_list"
            android:textColor="@color/d_red"
            android:layout_centerVertical="true"

            android:layout_marginStart="@dimen/view_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>

