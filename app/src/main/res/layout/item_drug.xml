<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/root_view"
    android:layout_marginBottom="@dimen/view_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView


        android:layout_margin="@dimen/view_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:transitionName="img_view"
                    android:id="@+id/preview_img"
                    android:src="@drawable/placeholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="H,13:7"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <RelativeLayout
                android:padding="@dimen/view_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginStart="@dimen/view_spacing"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/name_txt"

                        android:text="name : "


                        android:layout_margin="@dimen/view_spacing"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/des_txt"

                            android:layout_marginStart="@dimen/view_spacing"
                            android:text="result : "
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/matched_count_txt"

                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/view_spacing"
                            android:text="matched : 0"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>



                </LinearLayout>







            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>





