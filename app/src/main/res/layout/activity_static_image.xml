<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/static_img_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"

        app:layout_constraintVertical_bias="0.35"/>
    <com.nexysquare.ddoyac.textdetection.others.GraphicOverlay
        android:id="@+id/graphics_overlay_ocr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <com.nexysquare.ddoyac.textdetection.others.GraphicOverlay
        android:id="@+id/graphics_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />




    <LinearLayout
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/graphics_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:id="@+id/search_expanded_box"
            android:layout_width="match_parent"
            android:layout_height="64dp"

            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <ImageButton
                android:id="@+id/back_btn"
                app:tint="@color/white"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless" />
            <EditText
                android:textIsSelectable="true"
                android:focusable="false"
                android:inputType="none"
                android:id="@+id/text"

                android:layout_width="0dp"
                android:layout_height="@dimen/search_box_icon_size"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/search_box_text_left_margin"
                android:textSize="@dimen/search_text_size"
                android:textColor="@color/white"
                android:textColorHint="@color/searchbox_hint_text_color"
                android:background="@null"
                android:hint="@string/search_hint"
                android:transitionName="search_edit_view"
                android:singleLine="true"
                android:imeOptions="actionSearch" />
            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:importantForAccessibility="no"
                android:tint="@color/white"
                app:tint="@color/white"
                android:visibility="visible"
                />

        </LinearLayout>

        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View

                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1px"/>



        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphics_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp">





        <LinearLayout
            android:layout_marginStart="@dimen/view_spacing"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="@dimen/view_spacing"
                android:layout_width="40dp"
                android:src="@drawable/ic_detection_recognition_text"
                app:tint="@color/white"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                android:text=""

                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="200dp"
                android:textSize="20sp"
                android:id="@+id/ocr_result_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




            <Button
                android:layout_marginStart="@dimen/view_spacing"
                android:text="문자로 검색"
                android:id="@+id/ocr_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>




        <LinearLayout


            android:layout_marginStart="@dimen/view_spacing"
            android:layout_marginBottom="@dimen/view_spacing"
            android:layout_marginTop="@dimen/view_spacing"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton

                android:layout_marginStart="@dimen/view_spacing"
                android:tint="@color/white"
                android:id="@+id/shape_filter_btn"
                app:tint="@color/white"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_shape_filter"
                android:layout_width="40dp"
                android:visibility="visible"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginEnd="@dimen/view_spacing"
                android:textColor="@color/white"
                android:text=""
                android:id="@+id/shape_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageButton

                android:tint="@color/white"
                android:id="@+id/color_pick_btn"



                app:tint="@color/white"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_color_dropper_picker"
                android:layout_width="40dp"
                android:visibility="visible"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginStart="@dimen/view_spacing"
                android:id="@+id/extract_color_img"
                android:layout_width="25dp"

                android:layout_height="25dp"
                />
            <TextView

                android:visibility="gone"
                android:text=""
                android:textColor="@color/white"
                android:id="@+id/extract_color_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />




        </LinearLayout>



        <LinearLayout
            android:layout_marginStart="@dimen/view_spacing"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="@dimen/view_spacing"
                android:layout_width="40dp"
                android:src="@drawable/ic_detection_recognition_img"
                app:tint="@color/white"
                android:layout_height="40dp"/>
            <ImageView

                android:id="@+id/cropImg"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

            <Button
                android:layout_marginStart="@dimen/view_spacing"
                android:text="이미지로 검색"
                android:id="@+id/img_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>





    </LinearLayout>




    <View
        app:layout_constraintBottom_toTopOf="@id/graphics_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/linear_shadow_rev"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/graphics_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/linear_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>



    <include
        layout="@layout/view_extra_menu"
        android:id="@+id/extra_menu"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</androidx.constraintlayout.widget.ConstraintLayout>