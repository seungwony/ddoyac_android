<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">


    <View
        android:background="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/view_spacing"
        android:layout_marginEnd="@dimen/view_spacing"
        android:layout_height="1px"/>
    <TextView

        android:layout_marginTop="@dimen/view_margin_spacing"
        android:layout_margin="@dimen/view_margin_spacing"
        android:layout_marginStart="24dp"

        android:id="@+id/name_txt"
        android:maxWidth="320dp"
        android:text="NAME"
        android:transitionName="name_view"
        android:textSize="18sp"
        android:maxLines="2"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:textColor="@color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_toEndOf="@id/name_txt"
        android:text="1"

        android:id="@+id/count_txt"
        android:paddingTop="4dp"
        android:textSize="10sp"
        android:paddingBottom="4dp"
        android:paddingStart="@dimen/view_spacing"
        android:paddingEnd="@dimen/view_spacing"
        android:layout_centerVertical="true"
        android:textColor="@color/white"

        android:background="@drawable/rounded_fill_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>