<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/line_view"
        android:id="@+id/search_expanded_box"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="0dp"
            android:layout_height="@dimen/search_box_icon_size"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/search_box_text_left_margin"
            android:textSize="@dimen/search_text_size"
            android:textColor="@color/searchbox_text_color"
            android:textColorHint="@color/searchbox_hint_text_color"
            android:background="@null"
            android:hint="@string/search_hint"
            android:inputType="textFilter"
            android:transitionName="search_edit_view"
            android:singleLine="true"
            android:imeOptions="actionSearch" />
        <ImageButton
            android:id="@+id/search_expanded_magnifying_glass"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no"
            android:tint="@color/searchbox_icon_tint"
            android:visibility="invisible"
            />
    </LinearLayout>
    <View
        android:id="@+id/line_view"
         app:layout_constraintTop_toBottomOf="@id/search_expanded_box"
        android:background="@color/bright_gray"
    android:layout_width="match_parent"
    android:layout_height="1px"/>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/search_expanded_box"
        android:id="@+id/nested_scrollview"
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="64dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="모양"
                />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/shape_chip_group"
                app:chipSpacingHorizontal="@dimen/view_spacing"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_margin_spacing"
                android:paddingEnd="@dimen/view_margin_spacing"
                android:animateLayoutChanges="true"
                android:paddingBottom="@dimen/view_spacing"
                android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>

            <TextView
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="색상"
                />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/color_chip_group"
                android:animateLayoutChanges="true"
                app:chipSpacingHorizontal="@dimen/view_spacing"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/view_margin_spacing"
                android:paddingEnd="@dimen/view_margin_spacing"
                android:paddingBottom="@dimen/view_spacing"
                android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>

            <TextView

                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="마크"
                />

            <Button
                android:id="@+id/select_mark_btn"
                android:layout_marginStart="@dimen/view_margin_spacing"
                android:text="마크를 선택해 주세요."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/mark_img"
                android:layout_marginStart="@dimen/view_margin_spacing"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:background="@color/bright_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <Button
            android:id="@+id/reset_filter_btn"
            android:text="Reset"
            android:textColor="@color/searchbox_text_color"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="@dimen/view_margin_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/apply_filter_btn"
            android:text="필터 적용"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/view_margin_spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>